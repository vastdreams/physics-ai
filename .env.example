# Physics AI Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here-generate-with-python-secrets
SECRET_KEY=your-secret-key-here-generate-with-python-secrets

# OpenAI Configuration (for LLM integration)
OPENAI_API_KEY=your-openai-api-key

# LM Studio Configuration (local LLM)
LM_STUDIO_URL=http://127.0.0.1:8080
LM_STUDIO_MAX_CONCURRENT=1
LM_STUDIO_MIN_DELAY=0.5
LM_STUDIO_MAX_TOKENS=512

# Database (optional, for production)
# DATABASE_URL=postgresql://user:password@localhost/physics_ai

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# Evolution Configuration
EVOLUTION_ENABLED=true
EVOLUTION_INTERVAL_SECONDS=300
EVOLUTION_AUTO_APPLY=false
EVOLUTION_MIN_CONFIDENCE=0.3
